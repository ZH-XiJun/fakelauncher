<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        android:defaultValue="@string/pref_style_default"
        android:entries="@array/pref_style_string"
        android:entryValues="@array/pref_style"
        android:key="style"
        android:title="@string/pref_style" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="time_show_second"
        android:title="@string/pref_time_show_seconds"
        android:summaryOff="@string/pref_time_show_seconds_summary"
        android:summaryOn="@string/pref_caution"/>
    <SwitchPreference
        android:defaultValue="false"
        android:key="show_accurate_battery"
        android:title="@string/pref_show_accurate_battery"
        android:summaryOff="@string/pref_show_accurate_battery_summary"
        android:summaryOn="@string/pref_caution"/>
    <Preference
        android:key="text_stroke_width"
        android:title="@string/pref_text_stroke_width"
        android:summary="@string/pref_text_stroke_width_summary" />
    <com.wtbruh.fakelauncher.ui.preference.SeekBarPreference
        android:key="main_ui_height_scale"
        android:title="@string/pref_main_ui_height_scale"
        android:summary="@string/pref_main_ui_height_scale_summary"
        android:max="50"
        android:defaultValue="10"
        app:showSeekBarValue="true"/>
</PreferenceScreen>